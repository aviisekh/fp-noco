
<h1> <%=label%> scenario</h1>
<%= form_for(@scenario) do |s| %>
  <div class="form-group">
    <div class="form-group row">
      <%= s.label :name, "Name", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= s.text_field :name, class: "form-control" %> 
      </div>
      <%= s.label :description, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= s.text_area :description, cols: 60, rows: 3, class: "form-control" %> 
      </div>
    </div>
    <div class="form-group row">
      <%= s.label :link, "Link", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= s.text_field :link, class: "form-control" %> 
      </div>
      <%= s.label :version, "Version", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= s.text_field :version, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= s.label :hours_saved, "Hours saved", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= s.number_field :hours_saved, step: :any, class: "form-control" %> 
      </div>
      <%= s.label :miles_saved, "Miles saved", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= s.number_field :miles_saved, step: :any, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= s.label :files, "Files", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= s.text_field :files, class: "form-control" %> 
      </div>
      <%= s.label :date, "Date", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= s.date_field :date, class: "form-control" %>
      </div>
    </div>
    <%= s.submit label, :disable_with => "Proccessing...", class: "btn btn-primary"%>
    
  </div>
<%end%>
